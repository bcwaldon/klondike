apiVersion: v1
kind: Pod
metadata: 
  name: kube-controller-manager
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: "kube-controller-manager"
    image: "gcr.io/google_containers/hyperkube:v1.2.0"
    args:
    - "/hyperkube"
    - "controller-manager"
    - "--master={{ apiserver_client_endpoint }}"
    - "--v=2"
    - "--root-ca-file=/etc/kubernetes/ca.pem"
    - "--service-account-private-key-file=/etc/kubernetes/apiserver-key.pem"
    volumeMounts:
    - mountPath: /etc/kubernetes
      name: etc-kubernetes
  volumes:
  - name: etc-kubernetes
    hostPath:
      path: /etc/kubernetes
