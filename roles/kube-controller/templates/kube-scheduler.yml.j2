apiVersion: v1
kind: Pod
metadata: 
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: "kube-scheduler"
    image: "{{ hyperkube_image }}"
    args:
    - "/hyperkube"
    - "scheduler"
    - "--master={{ apiserver_local_endpoint }}"
    - "--v=2"
    - "--leader-elect=true"
