apiVersion: v1
kind: Pod
metadata: 
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: "kube-scheduler"
    image: "gcr.io/google_containers/hyperkube:v1.2.0"
    args:
    - "/hyperkube"
    - "scheduler"
    - "--master={{ apiserver_client_endpoint }}"
    - "--v=2"
